<Window
    x:Class="Snoop.Client.LauncherWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Rebus Snoop Launcher"
    Width="400"
    Height="400"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock
            Grid.Row="0"
            Margin="20"
            FontSize="18"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            Text="Rebus Snoop" />
        
        <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                FontSize="14"
                HorizontalAlignment="Center"
                Text="Choose your message broker:" />
            
            <Button
                Margin="0,10"
                Padding="20,10"
                Click="SqlServerButton_Click"
                Content="SQL Server" />
            
            <Button
                Margin="0,10"
                Padding="20,10"
                Click="RabbitMqButton_Click"
                Content="RabbitMQ" />
        </StackPanel>
        
        <TextBlock
            Grid.Row="2"
            Margin="20"
            FontSize="10"
            HorizontalAlignment="Center"
            Text="Select the message broker you want to snoop" />
    </Grid>
</Window>


